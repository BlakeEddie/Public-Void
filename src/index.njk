{% set postslist = collections.posts | sortPostsByDate | head(-10) %}
{% set courselist = courses | head(-10) | sortDataByDate %}

<div class="row">
  <div class="main-content col-md-9">
    {% set itemList = postslist %}
    {% include "itemslist.njk" %}
  </div>
  <div class="main-sidebar col-md-3">
    <h3 class="family-sans text-primary">Latest Courses</h3>
    {% set itemList = courselist %}
    {% include "sidebar.njk" %}
  </div>
</div>

<p>More posts can be found in <a href="{{ '/posts/' | url }}">the archive</a>.</p>
 