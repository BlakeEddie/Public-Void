<section reversed class="container my-5" style="counter-reset: start-from {{ postslist.length + 1 }}">
  <div class="row justify-content-center">
    {% for item in courses | reverse %}
      <section class="col-12 {% if loop.first %} mb-5 {% else %} my-5 {% endif %} {% if item.links.lil == url %} active{% endif %}">
          <div class="row no-gutters">
            {% if item.thumb %}
              <div class="col-md-3">
                  <a href="{{ item.links.lil | url }}" class="h3 family-emphasis font-weight-bold text-primary d-block mb-1"><img class="w-100 img-fluid rounded" src="{{ item.thumb }}" alt="{{ item.title }} photo"></a>
              </div>
            {% endif %}

            <div class="{% if item.thumb %}col-md-9 pl-md-4{% else %} col-m {% endif %}">
              <time class="d-block family-sans text-muted" datetime="{{ item.date | htmlDateString }}">{{ item.date | readableDate }}</time>
              <a href="{{ item.links.lil | url }}" class="h3 family-emphasis font-weight-bold text-primary d-block mb-1">{% if item.title %}{{ item.title }}{% else %}<code>{{ item.links.lil }}</code>{% endif %}</a>
              <p class="lead mb-1 font-serif text-secondary">{% if item.summary %}{{ item.summary }}{% endif %}</p>

              <div>
              {% for tag in item.tags %}
                {%- if tag != "post" -%}
                {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                <a href="{{ tagUrl | url }}" class="badge badge-info family-sans">{{ tag }}</a>
                {%- endif -%}
              {% endfor %}
              </div>
            </div>
          </div>
      </section>
    {% endfor %}
  </div>
</section>
