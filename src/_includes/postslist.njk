<section reversed class="container mb-3" style="counter-reset: start-from {{ postslist.length + 1 }}">
  <div class="row justify-content-center">
    {% for item in postslist | reverse %}

      <section class="col-12 {% if loop.first %} mb-3 {% else %} my-5 {% endif %}">
          <div class="row no-gutters">
            {% if item.data.thumb %}
              <div class="col-md-3">
                  <a href="{{ item.data.links[0].linkedin if item.data.links else item.url | url }}" class="h3 family-emphasis font-weight-bold text-primary d-block mb-1"><img class="w-100 img-fluid rounded" src="{{ item.data.thumb }}" alt="{{ item.data.title }} photo"></a>
              </div>
            {% endif %}

            <div class="{% if item.data.thumb %}col-md-9 pl-md-4{% else %} col-m {% endif %}">
              <time class="d-block family-sans text-muted" datetime="{{ item.date | htmlDateString }}">{{ item.date | readableDate }}</time>
              <a href="{{ item.url | url }}" class="h3 family-emphasis font-weight-bold text-primary d-block mb-1">{% if item.data.title %}{{ item.data.title }}{% else %}<code>{{ item.url }}</code>{% endif %}</a>
              <p class="lead mb-1 font-serif text-secondary">{% if item.data.summary %}{{ item.data.summary }}{% endif %}</p>

              {% include "tags.njk" %}
            </div>
          </div>
      </section>
    {% endfor %}
  </div>
</section>
