<section reversed class="container-fluid mb-3" style="counter-reset: start-from {{ postslist.length + 1 }}">
  <div class="row justify-content-center">
    {% for item in itemList %}

      {# If this is a post #}
      {% if item.data %}
        {% set thumb = item.data.thumb %}
        {% set title = item.data.title %}
        {% set summary = item.data.summary %}
        {% set date = item.date | simplifyDate %}
        {% set defaultURL = '' %}
        {% set links = item.data.links %}
        {% set tags = item.data.tags %}
        

        {% if item.data.links[0] %}
          {% for name, link in item.data.links[0] %}
            {% set defaultURL = link %}
          {% endfor %}
        {% else %}
            {% set defaultURL = item.url %}
        {% endif %}

      {% else %}
      {# If this is a course #}
        {% set thumb = item.thumb %}
        {% set title = item.title %}
        {% set summary = item.summary %}
        {% set date = item.date %}
        {% set defaultURL = item.links.lil %}
        {% set links = item.links %}
        {% set tags = item.tags %}
      {% endif %}

      <section class="col-12 {% if loop.first %} mb-3 {% else %} my-5 {% endif %}">
          <div class="row no-gutters">
            {% if thumb %}
              <div class="col-md-3">
                <a href="{{ defaultURL }}" class="h3 family-emphasis font-weight-bold text-primary d-block mb-1"><img class="w-100 img-fluid rounded" src="{{ thumb }}" alt="{{ title }} photo"></a>
              </div>
            {% endif %}

            <div class="{% if thumb %}col-md-9 pl-md-4{% else %} col-m {% endif %}">
              <time class="d-block family-sans text-muted" datetime="{{ date | htmlDateString }}">{{ date | courseDate }}</time>
              <a href="{{ defaultURL }}" class="h3 family-emphasis font-weight-bold text-primary d-block mb-1">{{ title }}</a>
              <p class="lead mb-1 font-serif text-secondary">{{ summary }}</p>

              {% include "tags.njk" %}
              {% include "links.njk" %}
            </div>
          </div>
      </section>
    {% endfor %}
  </div>
</section>
