<section reversed class="container my-5" style="counter-reset: start-from {{ postslist.length + 1 }}">
  <div class="row justify-content-center">
    {% for post in postslist | reverse %}
      <section class="col-12 col-md-12 {% if loop.first %} mb-5 {% else %} my-5 {% endif %} {% if post.url == url %} active{% endif %}">
          <div class="row no-gutters">
            {% if post.data.thumb %}
            <div class="col-6 col-md-3">
                <a href="{% if post.data.links[0] %}{{ post.data.links[0].object.keys([0]) }}{% endif %}">
                  <img class="w-100 img-fluid rounded" src="{{ post.data.thumb }}" alt="{{ post.data.title }} photo">
                </a>
              </div>
            {% endif %}

          <div class="{% if post.data.thumb %}col-md-9 pl-md-4{% else %} col-m {% endif %}">
            <time class="d-block family-sans text-muted" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
            <a href="{{ post.url | url }}" class="h3 family-emphasis font-weight-bold text-primary d-block mb-1">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
            <p class="lead mb-1 font-serif text-secondary">{% if post.data.summary %}{{ post.data.summary }}{% endif %}</p>

            <div>
            {% for tag in post.data.tags %}
              {%- if tag != "post" -%}
              {% set tagUrl %}/tags/{{ tag }}/{% endset %}
              <a href="{{ tagUrl | url }}" class="badge badge-info family-sans">{{ tag }}</a>
              {%- endif -%}
            {% endfor %}
            </div>
          </div>
          </div>
      </section>
    {% endfor %}
  </div>
</section>
